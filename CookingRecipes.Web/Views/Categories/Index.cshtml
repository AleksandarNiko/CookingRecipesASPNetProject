@model IEnumerable<CookingRecipes.Data.Models.Category>

@{
    ViewData["Title"] = "Категории";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Категории</h1>
    <a asp-action="Create" class="btn btn-primary">Добави категория</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="mt-auto">
                        <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-outline-primary btn-sm">Детайли</a>
                        <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-outline-secondary btn-sm ms-2">Редактирай</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
