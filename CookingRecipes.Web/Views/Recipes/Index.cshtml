@model IEnumerable<CookingRecipes.Data.Models.Recipe>

@{
    ViewData["Title"] = "Рецепти";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Рецепти</h1>
    <a asp-action="Create" class="btn btn-primary">Добави рецепта</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?q=80&w=400&auto=format&fit=crop&ixlib=rb-4.0.3&s=placeholder" class="img-fluid rounded-start" alt="Recipe image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-truncate">@item.Description</p>
                            <p class="card-text"><small class="text-muted">Време: @($"{item.PreparationTime}/{item.CookingTime}") минути • Порции: @item.Servings</small></p>
                            <a asp-action="Details" asp-route-id="@item.RecipeID" class="btn btn-sm btn-outline-primary">Виж рецептата</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
