@model CookingRecipes.Data.Models.Recipe

@{
    ViewData["Title"] = "Добави рецепта";
}

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <h4 class="card-title mb-3">Добавяне на нова рецепта</h4>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="PreparationTime" class="form-label"></label>
                    <input asp-for="PreparationTime" class="form-control" />
                    <span asp-validation-for="PreparationTime" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="CookingTime" class="form-label"></label>
                    <input asp-for="CookingTime" class="form-control" />
                    <span asp-validation-for="CookingTime" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Servings" class="form-label"></label>
                    <input asp-for="Servings" class="form-control" />
                    <span asp-validation-for="Servings" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label for="SelectedCategoryId" class="form-label">Категория</label>
                <select id="SelectedCategoryId" name="SelectedCategoryId" class="form-select">
                    <option value="">-- Изберете категория --</option>
                    @foreach (var category in ViewBag.Categories as IEnumerable<CookingRecipes.Data.Models.Category>)
                    {
                        <option value="@category.CategoryID">@category.Name</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">Отказ</a>
                <button type="submit" class="btn btn-primary">Запази рецепта</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
